<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="283.0" prefWidth="454.0" spacing="20" styleClass="root" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.polygraph.controlador.TipoProgresoController">

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <!-- PANEL BLANCO -->
    <VBox alignment="CENTER" prefHeight="218.0" prefWidth="403.0" spacing="18" styleClass="form-container">

        <!-- TÃTULO -->
        <Label styleClass="title-label" text="Nuevo Tipo de Progreso" />

        <!-- CAMPO DE TEXTO -->
        <VBox alignment="CENTER_LEFT" spacing="8">
            <Label styleClass="label" text="Nombre:" />
            <TextField fx:id="nombreProgresoField" prefWidth="340" promptText="Ej: En Proceso, Finalizado, Pendiente..." styleClass="text-field" />
        </VBox>

        <!-- BOTONES -->
        <HBox alignment="CENTER" spacing="15">
            <Button onAction="#guardar" styleClass="button" text="Guardar" />
            <Button onAction="#cancelar" styleClass="button" text="Cancelar" />
        </HBox>

    </VBox>
</VBox>
