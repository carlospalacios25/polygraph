<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.polygraph.controlador.CiudadesController"
      alignment="CENTER" prefHeight="283.0" prefWidth="454.0" spacing="20"
      styleClass="root" stylesheets="@../styles.css">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- PANEL BLANCO -->
    <VBox alignment="CENTER" prefHeight="218.0" prefWidth="403.0" spacing="18" styleClass="form-container">
        <!-- TÍTULO -->
        <Label text="Agregar Ciudad" styleClass="title-label"/>

        <!-- CAMPO DE TEXTO -->
        <VBox alignment="CENTER_LEFT" spacing="8">
            <Label text="Nombre:" styleClass="label"/>
            <TextField fx:id="nomCiudadField"
                       promptText="Ej: Bogotá, Medellín, Cali..."
                       prefWidth="340" styleClass="text-field"/>
        </VBox>

        <!-- BOTONES -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Crear Ciudad" onAction="#insertarCiudad" styleClass="button"/>
           <!--  <Button text="Cancelar" onAction="#cancelar" styleClass="button"/> -->
        </HBox>

        <!-- MENSAJE DE ERROR -->
        <Label fx:id="errorLabel" styleClass="error-label" text="" 
               style="-fx-padding: 5 0 0 0; -fx-min-height: 20;"/>
    </VBox>
</VBox>
