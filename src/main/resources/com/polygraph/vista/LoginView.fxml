                <Label text="Iniciar Sesi칩n" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e40af;"/>
                <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
                    <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label"/>
                    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="text-field"/>
                    
                    <Label text="Contrase침a:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label"/>
                    <HBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="1">
                        <PasswordField fx:id="passwordField" styleClass="text-field" HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="passwordVisibleField" styleClass="text-field" visible="false" managed="false" HBox.hgrow="ALWAYS"/>
                    </HBox>
                    
                    <CheckBox fx:id="showPasswordCheck" text="Mostrar contrase침a" onAction="#togglePasswordVisibility" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    
                    <Button text="Iniciar Sesi칩n" onAction="#login" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="button"/>
                </GridPane>
                <Label fx:id="errorLabel" text="" styleClass="error-label"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>