<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" styleClass="root" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.polygraph.controlador.GestServicioControlador">
   <Pane prefHeight="38.0" prefWidth="1168.0">
      <children>
          <!-- TÍTULO -->
          <Label fx:id="lblId1" layoutX="270.0" layoutY="12.0" prefHeight="22.0" prefWidth="629.0" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" styleClass="title-label" text="GESTIÓN DEL SERVICIO # —" />
      </children>
   </Pane>
    
    <!-- INFORMACIÓN GENERAL -->
    <Label fx:id="lblInfoGeneral" prefHeight="47.0" prefWidth="1133.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #fa7d7d; -fx-border-width: 1;" styleClass="label" text="Información General\nCliente: [Cargando...]\nCandidato: [Cargando...]\nProceso: [Cargando...]\nEstado: [Cargando...]\nResultado: [Cargando...]" wrapText="true" />

    <!-- PROGRESO -->
    <VBox spacing="10" styleClass="form-container">
        <Label style="-fx-text-fill: #e33939;" styleClass="title-label" text="Progreso" />
        <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="txtNuevoProgreso" prefWidth="300" promptText="Observación..." styleClass="text-field" />
            <ComboBox fx:id="cmbTipoProgreso" prefWidth="150" promptText="Tipo" styleClass="text-field" />
            <Button onAction="#agregarProgresoDirecto" styleClass="button" text="Agregar" />
        </HBox>
        <TableView fx:id="tblProgreso" prefHeight="178.0" prefWidth="1128.0" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colProgFecha" prefWidth="100" text="Fecha" />
                <TableColumn fx:id="colProgTipo" prefWidth="130" text="Tipo" />
                <TableColumn fx:id="colProgObservacion" prefWidth="350" text="Observación" />
                <TableColumn fx:id="colProgUsuario" prefWidth="100" text="Usuario" />
            </columns>
        </TableView>
    </VBox>

    <!-- DOCUMENTOS + ANÁLISIS -->
    <GridPane hgap="25" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <!-- DOCUMENTOS -->
        <VBox spacing="10" styleClass="form-container" GridPane.columnIndex="0">
            <Label style="-fx-text-fill: #e33939;" styleClass="title-label" text="Documentos" />
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ComboBox fx:id="cmbTipoDocumento" prefHeight="46.0" prefWidth="242.0" promptText="Tipo de documento" styleClass="text-field" />
            </HBox>
         <Pane prefHeight="63.0" prefWidth="552.0">
            <children>
                   <Button layoutX="32.0" layoutY="11.0" onAction="#subirDocumentoDirecto" styleClass="button" text="Subir Documento" />
            </children>
         </Pane>
            <TableView fx:id="tblDocumentos" prefHeight="172.0" prefWidth="552.0" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colDocTipo" prefWidth="140" text="Tipo" />
                    <TableColumn fx:id="colDocNombre" prefWidth="200" text="Archivo" />
                    <TableColumn fx:id="colDocFecha" prefWidth="110" text="Fecha" />
                    <TableColumn fx:id="colDocEstado" prefWidth="100" text="Estado" />
                </columns>
            </TableView>
        </VBox>

        <!-- ANÁLISIS -->
        <VBox spacing="10" styleClass="form-container" GridPane.columnIndex="1">
            <Label style="-fx-text-fill: #e33939;" styleClass="title-label" text="Análisis" />
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ComboBox fx:id="cmbTipoAnalisis" prefWidth="120" promptText="Tipo" styleClass="text-field" />
                <TextField fx:id="txtNuevoAnalisis" prefHeight="27.0" promptText="Contenido..." styleClass="text-field" HBox.hgrow="ALWAYS" />
            </HBox>
         <Pane prefHeight="58.0" prefWidth="494.0">
            <children>
                   <Button layoutX="49.0" layoutY="11.0" onAction="#agregarAnalisisDirecto" styleClass="button" text="Agregar" />
            </children>
         </Pane>
            <TableView fx:id="tblAnalisis" prefHeight="166.0" prefWidth="511.0" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colAnaTipo" prefWidth="100" text="Tipo" />
                    <TableColumn fx:id="colAnaContenido" prefWidth="300" text="Contenido" />
                </columns>
            </TableView>
        </VBox>

        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <!-- VOLVER -->
    <HBox alignment="CENTER_RIGHT" />
</VBox>
