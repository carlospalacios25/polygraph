<VBox alignment="CENTER" spacing="15" styleClass="root" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.polygraph.controlador.UsuarioController">
    <children>
        <VBox fx:id="formContainer" prefHeight="390.0" prefWidth="814.0" styleClass="form-container">
            <Label styleClass="title-label" text="Registrar Nuevo Usuario" />
            <GridPane alignment="CENTER" hgap="15" style="-fx-padding: 20; -fx-background-color: white; -fx-border-color: #d1d5db; -fx-border-radius: 8; -fx-background-radius: 8;" vgap="15">
                <Label styleClass="label" text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nombreField" prefHeight="37.0" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label styleClass="label" text="Apellido:" GridPane.columnIndex="2" />
                <TextField fx:id="apellidoField" styleClass="text-field" GridPane.columnIndex="3" />
                <Label styleClass="label" text="Nombre Usuario:" GridPane.rowIndex="1" />
                <TextField fx:id="usernameField" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label styleClass="label" text="Correo:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <TextField fx:id="correoField" styleClass="text-field" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                <Label styleClass="label" text="ContraseÃ±a:" GridPane.rowIndex="2" />
                <PasswordField fx:id="passwordField" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label styleClass="label" text="Perfil:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <ComboBox fx:id="perfilComboBox" prefHeight="31.0" prefWidth="178.0" styleClass="combo-box" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                <CheckBox fx:id="activoCheck" selected="true" styleClass="checkbox" text="Activo" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" />
               <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" />
               <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="40" prefHeight="40" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="40" prefHeight="40" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="40" prefHeight="40" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="40" prefHeight="40" vgrow="SOMETIMES" />
                </rowConstraints>
            </GridPane>
            <Pane prefHeight="73.0" prefWidth="938.0">
                <children>
                    <Button layoutX="14.0" layoutY="10.0" onAction="#insertarUsuario" styleClass="button" text="Insertar Usuario" />
                    <Button graphicTextGap="10.0" layoutX="167.0" layoutY="10.0" mnemonicParsing="false" onAction="#cargarPerfil" prefHeight="38.0" prefWidth="145.0" styleClass="sidebar-button" text="Agregar Perfil" />
                    <Button graphicTextGap="10.0" layoutX="334.0" layoutY="10.0" mnemonicParsing="false" onAction="#cargarPermiso" prefHeight="38.0" prefWidth="152.0" styleClass="sidebar-button" text="Agregar Permiso" />
                </children>
            </Pane>
        </VBox>
        <TableView fx:id="usuarioTable" prefHeight="214.0" prefWidth="498.0" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colNombreUsuario" prefWidth="120.0" text="Nombre Usario" />
                <TableColumn fx:id="colPerfilUsuario" prefWidth="120.0" text="Perfil de Usuario" />
            </columns>
        </TableView>
    </children>
</VBox>
