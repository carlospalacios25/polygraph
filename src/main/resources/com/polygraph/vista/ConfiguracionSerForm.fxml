<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="658.0" prefWidth="849.0" spacing="20" styleClass="root" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.polygraph.controlador.ConServicioControlador">

<padding>
        <Insets bottom="35" left="45" right="45" top="35" />
    </padding>
   <Pane prefHeight="229.0" prefWidth="760.0" styleClass="form-container">
      <children>
      
             <!-- SUBTÍTULO -->
          <Label layoutX="371.0" layoutY="34.0" prefHeight="26.0" prefWidth="317.0" style="-fx-text-fill: #555; -fx-font-size: 13px; -fx-padding: 0 0 10 0;" styleClass="label" text="Asigna tipos de progreso a cada proceso" />
      
          <!-- TÍTULO PRINCIPAL -->
          <Label layoutX="396.0" layoutY="14.0" styleClass="title-label" stylesheets="@../styles.css" text="Configuración de Servicios" />
           <Button layoutX="206.0" layoutY="76.0" onAction="#abrirCrearTipoProgreso" styleClass="button" text="Nuevo Tipo de Progreso" />
           <Button layoutX="50.0" layoutY="76.0" onAction="#abrirCrearProceso" styleClass="button" text="Nuevo Proceso" />
      </children>
   </Pane>

    <!-- FILTROS -->
    <VBox spacing="15" styleClass="form-container">
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label styleClass="label" text="Proceso:" />
            <ComboBox fx:id="comboProcesos" prefWidth="360" promptText="Selecciona un proceso" styleClass="text-field" />
            <Region HBox.hgrow="ALWAYS" />
            <TextField fx:id="buscadorField" prefWidth="300" promptText="Buscar tipo de progreso..." styleClass="text-field" />
        </HBox>

        <!-- TABLA -->
        <TableView fx:id="tablaRelaciones" prefHeight="380" prefWidth="920" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colTipoProgreso" prefWidth="420" text="Tipo de Progreso" />
                <TableColumn fx:id="colHabilitado" prefWidth="160" text="Estado" />
                <TableColumn fx:id="colAcciones" prefWidth="180" text="Acciones" />
            </columns>
        </TableView>

        <!-- BOTÓN ACTUALIZAR -->
        <HBox alignment="CENTER_RIGHT">
            <Button onAction="#actualizarRelaciones" styleClass="button" text="Actualizar Datos" />
        </HBox>
    </VBox>
</VBox>
