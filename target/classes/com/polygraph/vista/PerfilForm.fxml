<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="427.0" spacing="15" styleClass="root" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.polygraph.controlador.PerfilController">
    <children>
        <VBox prefHeight="402.0" prefWidth="442.0" styleClass="form-container">
           <Label styleClass="title-label" text="Agregar perfiles" />
            <GridPane alignment="CENTER" hgap="15" prefHeight="248.0" prefWidth="369.0" style="-fx-padding: 20;" vgap="12">
                <Label styleClass="label" text="Perfil:" GridPane.columnIndex="0" />
                <TextField fx:id="perfilField" prefHeight="37.0" prefWidth="164.0" styleClass="text-field" GridPane.columnIndex="2" />
                <Label styleClass="label" text="Descripcion" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="descripcionPerfil" styleClass="text-field" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <Button graphicTextGap="10.0" mnemonicParsing="false" onAction="#insertarPerfil" prefHeight="38.0" prefWidth="111.0" styleClass="sidebar-button" text="Crear Perfil" GridPane.columnIndex="2" GridPane.rowIndex="5" />
                <columnConstraints>
                    <ColumnConstraints minWidth="-Infinity" />
                    <ColumnConstraints halignment="RIGHT" />
               <ColumnConstraints hgrow="ALWAYS" minWidth="-Infinity" />
                </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
            <Label fx:id="errorLabel" styleClass="error-label" text="" />
        </VBox>
    </children>
</VBox>
